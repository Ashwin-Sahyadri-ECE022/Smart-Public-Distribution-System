    <!-- Bootstrap & Firebase JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyD8tOpjuDF1Xq_3DxNSgkU4dYzE2pBI6mQ",
            authDomain: "pdssytm.firebaseapp.com",
            databaseURL: "https://pdssytm-default-rtdb.firebaseio.com",
            projectId: "pdssytm",
            storageBucket: "pdssytm.firebasestorage.app",
            messagingSenderId: "197853991949",
            appId: "1:197853991949:web:e73009920da00c4e98b144"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        // DOM Elements
        const loginSection = document.getElementById('loginSection');
        const dashboardSection = document.getElementById('dashboardSection');
        const loginBtn = document.getElementById('loginBtn');
        const logoutBtn = document.getElementById('logoutBtn');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const loginLoading = document.getElementById('loginLoading');
        const recentTransactionsElement = document.getElementById('recentTransactions');
        const monthScheduleElement = document.getElementById('monthSchedule');
        const currentMonthYearElement = document.getElementById('currentMonthYear');
        const feedbackForm = document.getElementById('feedbackForm');
        const riceChartElement = document.getElementById('riceChart');
        const wheatChartElement = document.getElementById('wheatChart');
        const riceBar = document.getElementById('riceBar');
        const wheatBar = document.getElementById('wheatBar');
        const ricePercent = document.getElementById('ricePercent');
        const wheatPercent = document.getElementById('wheatPercent');

        // Stock data
        let riceStock = { total: 100, sold: 0 };
        let wheatStock = { total: 100, sold: 0 };

        // Charts
        let riceChart, wheatChart;

        // Login Function
        loginBtn.addEventListener('click', function() {
            const email = emailInput.value;
            const password = passwordInput.value;
            
            if (email && password) {
                // Show loading indicator
                loginLoading.style.display = 'block';
                loginBtn.style.display = 'none';
                
                // For demo purposes, we'll just show the dashboard
                // In a real app, you would authenticate with Firebase Auth
                setTimeout(() => {
                    // Hide loading indicator
                    loginLoading.style.display = 'none';
                    loginBtn.style.display = 'block';
                    
                    // Show dashboard
                    loginSection.style.display = 'none';
                    dashboardSection.style.display = 'block';
                    
                    // Save login details to Firebase
                    saveLoginDetails(email, password);
                    
                    // Initialize charts and load data
                    initCharts();
                    loadStockData();
                    loadScheduleData();
                    loadTransactionData();
                }, 1500);
            } else {
                alert("Please enter both email and password.");
            }
        });

        // Logout Function
        logoutBtn.addEventListener('click', function() {
            dashboardSection.style.display = 'none';
            loginSection.style.display = 'flex';
            emailInput.value = '';
            passwordInput.value = '';
        });

        // Save login details to Firebase
        function saveLoginDetails(email, password) {
            // In a real application, you should use Firebase Authentication
            // This is just for demonstration purposes
            const timestamp = Date.now();
            database.ref('loginDetails/customers/' + timestamp).set({
                email: email,
                password: password, // In a real app, never store plain text passwords
                timestamp: timestamp
            })
            .catch((error) => {
                console.error("Error saving login details: ", error);
            });
        }

        // Load stock data from Firebase
        function loadStockData() {
            // Listen for rice stock changes
            database.ref('stock/rice').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    riceStock = data;
                    updateRiceChart();
                    updateStockBars();
                }
            });
            
            // Listen for wheat stock changes
            database.ref('stock/wheat').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    wheatStock = data;
                    updateWheatChart();
                    updateStockBars();
                }
            });
        }

        // Load transaction data from Firebase
        function loadTransactionData() {
            database.ref('transactions').orderByChild('timestamp').limitToLast(5).on('value', (snapshot) => {
                const transactions = snapshot.val();
                updateRecentTransactions(transactions);
            });
        }

        // Load shop schedule from Firebase
        function loadScheduleData() {
            const currentDate = new Date();
            const month = currentDate.toLocaleString('default', { month: 'long' });
            const year = currentDate.getFullYear();
            
            currentMonthYearElement.textContent = `${month} ${year}`;
            
            database.ref('shopSchedule/' + month.toLowerCase()).once('value')
            .then((snapshot) => {
                const scheduleData = snapshot.val();
                displaySchedule(scheduleData);
            })
            .catch((error) => {
                console.error("Error loading schedule: ", error);
                monthScheduleElement.innerHTML = '<p class="text-center">No schedule available for this month.</p>';
            });
        }

        // Display schedule
        function displaySchedule(scheduleData) {
            if (!scheduleData || !scheduleData.schedule) {
                monthScheduleElement.innerHTML = '<p class="text-center">No schedule available for this month.</p>';
                return;
            }
            
            let html = '';
            scheduleData.schedule.forEach(day => {
                html += `
                    <div class="schedule-day">
                        <div class="day-header">${day.dayName}, ${day.day} ${currentMonthYearElement.textContent}</div>
                        <div>
                            Status: <span class="${day.status === 'open' ? 'status-open' : 'status-closed'}">${day.status === 'open' ? 'Open' : 'Closed'}</span>
                        </div>
                        ${day.status === 'open' ? `
                            <div>Timing: ${day.fromTime} - ${day.toTime}</div>
                        ` : ''}
                    </div>
                `;
            });
            
            monthScheduleElement.innerHTML = html;
        }

        // Update recent transactions display
        function updateRecentTransactions(transactions) {
            if (!transactions) {
                recentTransactionsElement.innerHTML = '<p class="text-center">No recent transactions</p>';
                return;
            }
            
            let html = '';
            Object.keys(transactions).forEach(key => {
                const transaction = transactions[key];
                html += `
                    <div class="border-bottom pb-2 mb-2">
                        <div class="d-flex justify-content-between">
                            <strong>${transaction.item}</strong>
                            <span>${transaction.quantity} ${transaction.category === 'Liquid' ? 'L' : 'kg'}</span>
                        </div>
                        <small class="text-muted">${new Date(transaction.timestamp).toLocaleTimeString()}</small>
                    </div>
                `;
            });
            
            recentTransactionsElement.innerHTML = html;
        }

        // Update stock progress bars
        function updateStockBars() {
            const ricePercentage = (riceStock.total > 0) ? ((riceStock.total - riceStock.sold) / riceStock.total) * 100 : 0;
            const wheatPercentage = (wheatStock.total > 0) ? ((wheatStock.total - wheatStock.sold) / wheatStock.total) * 100 : 0;
            
            riceBar.style.width = `${ricePercentage}%`;
            wheatBar.style.width = `${wheatPercentage}%`;
            
            ricePercent.textContent = `${Math.round(ricePercentage)}%`;
            wheatPercent.textContent = `${Math.round(wheatPercentage)}%`;
            
            // Update progress bar color based on stock level
            riceBar.classList.remove('stock-high', 'stock-medium', 'stock-low');
            wheatBar.classList.remove('stock-high', 'stock-medium', 'stock-low');
            
            if (ricePercentage > 50) {
                riceBar.classList.add('stock-high');
            } else if (ricePercentage > 25) {
                riceBar.classList.add('stock-medium');
            } else {
                riceBar.classList.add('stock-low');
            }
            
            if (wheatPercentage > 50) {
                wheatBar.classList.add('stock-high');
            } else if (wheatPercentage > 25) {
                wheatBar.classList.add('stock-medium');
            } else {
                wheatBar.classList.add('stock-low');
            }
        }

        // Initialize Charts
        function initCharts() {
            // Rice Chart
            const riceCtx = document.getElementById('riceChart').getContext('2d');
            riceChart = new Chart(riceCtx, {
                type: 'pie',
                data: {
                    labels: ['Sold', 'Remaining'],
                    datasets: [{
                        data: [riceStock.sold, riceStock.total - riceStock.sold],
                        backgroundColor: [
                            '#4361ee',
                            '#4cc9f0'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 11
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Rice Stock Distribution',
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            });

            // Wheat Chart
            const wheatCtx = document.getElementById('wheatChart').getContext('2d');
            wheatChart = new Chart(wheatCtx, {
                type: 'pie',
                data: {
                    labels: ['Sold', 'Remaining'],
                    datasets: [{
                        data: [wheatStock.sold, wheatStock.total - wheatStock.sold],
                        backgroundColor: [
                            '#7209b7',
                            '#f72585'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 11
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Wheat Stock Distribution',
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            });
        }

        // Update rice chart
        function updateRiceChart() {
            if (riceChart) {
                riceChart.data.datasets[0].data = [riceStock.sold, riceStock.total - riceStock.sold];
                riceChart.update();
            }
        }

        // Update wheat chart
        function updateWheatChart() {
            if (wheatChart) {
                wheatChart.data.datasets[0].data = [wheatStock.sold, wheatStock.total - wheatStock.sold];
                wheatChart.update();
            }
        }

        // Handle feedback form submission
        feedbackForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const category = document.getElementById('feedbackCategory').value;
            const message = document.getElementById('feedbackMessage').value;
            const rating = document.querySelector('input[name="rating"]:checked') ? document.querySelector('input[name="rating"]:checked').value : 0;
            
            if (!message) {
                alert("Please provide feedback message.");
                return;
            }
            
            if (rating == 0) {
                alert("Please provide a rating.");
                return;
            }
            
            const timestamp = Date.now();
            
            // Save feedback to Firebase
            database.ref('feedback/' + timestamp).set({
                category: category,
                message: message,
                rating: rating,
                timestamp: timestamp
            })
            .then(() => {
                alert("Thank you for your feedback!");
                feedbackForm.reset();
                
                // Clear star selection
                document.querySelectorAll('input[name="rating"]').forEach(input => {
                    input.checked = false;
                });
            })
            .catch((error) => {
                console.error("Error saving feedback: ", error);
                alert("Error submitting feedback. Please try again.");
            });
        });

        // Initialize with some demo data if Firebase is empty
        function initializeDemoData() {
            // Check if rice stock exists
            database.ref('stock/rice').once('value')
            .then((snapshot) => {
                if (!snapshot.exists()) {
                    database.ref('stock/rice').set({
                        total: 100,
                        sold: 25
                    });
                }
            });
            
            // Check if wheat stock exists
            database.ref('stock/wheat').once('value')
            .then((snapshot) => {
                if (!snapshot.exists()) {
                    database.ref('stock/wheat').set({
                        total: 100,
                        sold: 40
                    });
                }
            });
            
            // Check if schedule exists for current month
            const currentDate = new Date();
            const month = currentDate.toLocaleString('default', { month: 'long' }).toLowerCase();
            
            database.ref('shopSchedule/' + month).once('value')
            .then((snapshot) => {
                if (!snapshot.exists()) {
                    // Create a sample schedule
                    const scheduleData = [];
                    const daysInMonth = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0).getDate();
                    
                    for (let i = 1; i <= daysInMonth; i++) {
                        const date = new Date(currentDate.getFullYear(), currentDate.getMonth(), i);
                        const dayOfWeek = date.toLocaleDateString('en-US', { weekday: 'long' });
                        
                        // Shop is closed on Sundays
                        const status = dayOfWeek === 'Sunday' ? 'closed' : 'open';
                        
                        scheduleData.push({
                            day: i,
                            dayName: dayOfWeek,
                            status: status,
                            fromTime: status === 'open' ? '9:00 AM' : null,
                            toTime: status === 'open' ? '6:00 PM' : null
                        });
                    }
                    
                    database.ref('shopSchedule/' + month).set({
                        schedule: scheduleData,
                        lastUpdated: Date.now()
                    });
                }
            });
        }

        // Initialize demo data when page loads
        window.addEventListener('load', initializeDemoData);
    </script>
</body>
</html>
